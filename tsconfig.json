{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,

    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  }
}
